		/**
		 * @private
		 */
		protected var _typicalItem:DisplayObject;

		[Bindable(event="change")]
		/**
		 * @copy feathers.layout.IVirtualLayout#typicalItem
		 */
		public function get typicalItem():DisplayObject
		{
			return this._typicalItem;
		}

		/**
		 * @private
