		/**
		 * @private
		 */
		protected var _useVirtualLayout:Boolean = true;

		[Bindable(event="change")]
		/**
		 * @copy feathers.layout.IVirtualLayout#useVirtualLayout
		 *
		 * @default true
		 */
		public function get useVirtualLayout():Boolean
		{
			return this._useVirtualLayout;
